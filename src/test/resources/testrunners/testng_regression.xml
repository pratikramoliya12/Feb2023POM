	<test name="QA Boat Accounts Page Test">
		<classes>
			<class name="com.qa.qaboat.tests.AccountsPageTest" />
		</classes>
	</test> 
	
	<test name="QA Boat Search Results Page Test">
		<classes>
			<class name="com.qa.qaboat.tests.SearchResultsPageTest" />
		</classes>
	</test>
	
	<test name="QA Boat Product Details Page Test">
		<classes>
			<class name="com.qa.qaboat.tests.ProductDetailsPageTest" />
		</classes>
